{
  "editor.formatOnSave": true,
  "workbench.iconTheme": "vscode-icons",
  "vsicons.presets.nestjs": true,
  "files.exclude": {
    // "**/dist": true,
    "**/node_modules": true,
    "**/yarn.lock": true,
    "**/.cache": true,
    // "**/.next": true,
    // "**/public": true,

    /** Barely updated files **/
    "**/index.d.ts": true,
    "**/jest.config.ts": true,
    "**/next-env.d.ts": true
  },
  "search.exclude": {
    "dist/**": true,
    "public/**": true,
    "node_modules/**": false
  },
  "files.associations": {
    "**/*.env*": "dotenv"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
}
